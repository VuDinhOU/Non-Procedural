

@{
    ViewBag.Title = "Contact";
}

<!DOCTYPE html>
<html lang="en">

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<body>
    <header class="w3-container w3-pale-red w3-center" style="padding:105px 16px">
        <h1 class="w3-margin w3-jumbo">Contact Us</h1>
    </header>

    <p></p>

    <div class="w3-center">
        <form action="action_page.php">
            <ul style="list-style: none;">

                <li>
                    <label for="fname">First Name : </label>
                    <input type="text" id="fname" name="firstname" placeholder="Your name">
                </li>
                <li></li>
                <li>
                    <label for="lname">Last Name : </label>
                    <input type="text" id="lname" name="lastname" placeholder="Your last name">
                </li>
                <li></li>
                <li>
                    <label for="subject">Comments :</label>
                    <textarea id="comments" name="comments" placeholder="Comments" style="height:50px"></textarea>
                </li>
            </ul>

            <div class="w3-center">
                @Html.ActionLink("Submit", "Thanks", "Home")
            </div>

        </form>
    </div>

</body>
</html>

